node|z13- [railway=halt],
node|z14- [railway=tram_stop],
node|z13- [aerialway=station] {
    set .station;
    icon-image: "square";
    icon-width: 4px;
    icon-height: 4px;
}
node|z15- [railway=halt],
node|z15- [railway=tram_stop],
node|z15- [aerialway=station] {
    icon-width: 6px;
    icon-height: 6px;
}
node|z15- [railway=halt],
node|z16- [railway=tram_stop],
node|z15- [aerialway=station] {
    text: name;
    font-size: 8pt;
    text-halo-radius: 1.5px;
    text-halo-color: #fff;
    max-width: 80px;
}
