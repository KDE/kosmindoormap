// #stations layer
node|z18- [railway=subway_entrance] {
    set .transportation;
    icon-image: "entrance";
}
node|z19- [railway=subway_entrance] {
    text: ref;
    font-size: 8pt;
    text-halo-radius: 1.5px;
    text-halo-color: #fff;
}

node|z12- [railway=station] {
    set .station;
    icon-image: "square";
    icon-width: 6px;
    icon-height: 6px;
}
node|z14- [railway=station] {
    text: name;
    font-size: 8pt;
    font-weight: bold;
    text-halo-radius: 1.5px;
    text-halo-color: #fff;
}

