{
    "id": "org.kde.kosmindoormap",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "kosmindoormap",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],
    "modules": [
        {
            "name": "kirigami-addons",
            "config-opts": [ "-DBUILD_TESTING=OFF" ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-1.5.0.tar.xz",
                    "sha256": "56e3ceb52055b5603320ea08b27d3673d32a391a8d58646d998227d8b51f0a93"
                }
            ],
            "cleanup": [
                "/lib/cmake"
            ]
        },
        {
            "name": "kpublictransport",
            "config-opts": [ "-DBUILD_TESTING=OFF" ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "https://invent.kde.org/libraries/kpublictransport.git", "branch": "master" } ],
            "cleanup": [ "/include", "/lib/cmake", "/mkspecs", "/etc/xdg/*categories", "/share/qlogging-categories6" ]
        },
        {
            "name": "kopeninghours",
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DBUILD_WITH_QT6=ON" ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "https://invent.kde.org/libraries/kopeninghours.git", "branch": "master" } ],
            "cleanup": [ "/include", "/lib/cmake", "/mkspecs", "/etc/xdg/*categories", "/share/qlogging-categories6" ]
        },
        {
            "name": "recast",
            "config-opts": [
                "-DBUILD_SHARED_LIBS=OFF",
                "-DRECASTNAVIGATION_DEMO=OFF",
                "-DRECASTNAVIGATION_EXAMPLES=OFF",
                "-DRECASTNAVIGATION_TESTS=OFF",
                "-DCMAKE_POSITION_INDEPENDENT_CODE=ON"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "https://github.com/recastnavigation/recastnavigation", "branch": "main" } ],
            "cleanup": [ "/include", "/lib" ]
        },
        {
            "name": "kosmindoormap",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DBUILD_STANDALONE_APP=ON" ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ],
            "cleanup": [ "/include", "/lib/cmake", "/mkspecs", "/etc/xdg/*categories", "/share/qlogging-categories6" ]
        }
    ]
}
